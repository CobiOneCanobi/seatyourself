  </div>

  <div class="field">
    <%= f.label :price_range, "Average Price" %><br />
    <%= f.text_field :price_range %>
  </div>

  <div class="field">
    <%= f.label :summary %><br />
    <%= f.text_area :summary %>
  </div>

  <div class="field">
    <%= f.label :category %><br />
    <%= f.text_field :category %>
  </div>

  <div class="field">
    <%= f.label :hours_of_operation %><br />
    <%= f.text_field :hours_of_operation %>
  </div>

  <div class="field">
    <%= f.label :phone_num, "Phone Number" %><br />
    <%= f.text_field :phone_num %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
